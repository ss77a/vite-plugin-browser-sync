{
  "name": "vite-plugin-browser-sync",
  "version": "1.0.0",
  "description": "Add BrowserSync in your Vite project",
  "author": "Applelo",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Applelo/vite-plugin-browser-sync",
  "repository": {
    "type": "git",
    "url": "https://github.com/Applelo/vite-plugin-browser-sync"
  },
  "bugs": "https://github.com/Applelo/vite-plugin-browser-sync/issues",
  "keywords": [
    "browsersync",
    "browser-sync",
    "livereload",
    "serve",
    "vite",
    "vite-plugin"
  ],
  "exports": {
    ".": {
      "require": "./release/index.js",
      "import": "./release/index.mjs"
    }
  },
  "main": "./release/index.js",
  "module": "./release/index.mjs",
  "types": "./release/index.d.ts",
  "files": [
    "release"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "format": "prettier --write --cache .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test": "vitest"
  },
  "peerDependencies": {
    "vite": "^2.9.0 || ^3.1.0-0 || ^3.1.8"
  },
  "dependencies": {
    "@types/browser-sync": "^2.26.3",
    "browser-sync": "^2.27.10",
    "kolorist": "^1.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-define-config": "^1.7.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "playwright": "^1.27.1",
    "prettier": "^2.7.1",
    "tsup": "^6.3.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vitest": "^0.19.1"
  }
}
